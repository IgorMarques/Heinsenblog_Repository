	<% @posts.each do |post| %>
		<div class= "post">
			<div class="cabecalhopost">
				<h3><%=post.title%></h3>
				<p>by: <%= post.user.email %></p>
			</div>
			<p class= "conteudopost"><%= post.content %></td></p>
